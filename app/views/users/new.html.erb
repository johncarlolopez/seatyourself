<div class="cardshow">

<p><strong>Sign Up</strong></p>

<%= form_for @user do |f| %>

  <p>
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :role  %>:
    <%= f.select :role, [['Customer', 1], ['Restaurant Owner', 2]] %>
  </p>

  <p>
     <%= f.label :password %><br />
     <%= f.password_field :password %>
  </p>

  <p>
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>

<% end %>
</div>
