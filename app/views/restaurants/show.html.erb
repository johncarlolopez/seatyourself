<div class="cardshow">
  <p><strong>Name:</strong> <%= @restaurant.name %></p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>City:</strong> <%= @restaurant.city %></p>
  <p><strong>Price Range:</strong> <%= @restaurant.price_range %></p>
  <p><strong>Capacity:</strong> <%= @restaurant.capacity %></p>
  <p><strong>Summary:</strong> <%= @restaurant.summary %></p>
  <p><strong>Opening Time:</strong> <%= @restaurant.opening_time %></p>
  <p><strong>Closing Time:</strong> <%= @restaurant.closing_time %></p>
  <p><strong>Menu:</strong> <%= @restaurant.menu %></p>
  <p><strong>Min Party Size:</strong> <%= @restaurant.min_party %></p>
  <p><strong>Max Party Size:</strong> <%= @restaurant.max_party %></p>
  <br>
  <p><%= link_to("Edit", edit_restaurant_path) %>|<%= link_to("Delete", restaurant_path(@restaurant.id), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"}) %>
  </p>
  <p>
    <%= link_to("Book Reservation", new_restaurant_reservation_path(restaurant_id: @restaurant.id)) %>
  </p>
</div>
